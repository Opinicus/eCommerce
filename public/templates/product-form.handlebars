<div class="product-form-container center-block">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Add/Edit/Show</h3>
        </div>
        <div class="center-block">
            <div class="form-group">
                <label>Upload Image</label>
                <div class="input-group">
                    <span class="input-group-btn">
                                    <span class="btn btn-default btn-file">
                                        Browseâ€¦ <input type="file" id="imgInput">
                                    </span>
                    </span>
                    <input type="text" class="form-control" readonly>
                </div>
                <img id='img-upload' class="img-thumbnail" src="{{this.img}}"/>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Title</span>
                    <input id="productTitle" type="text" class="form-control" aria-label="basic-addon1">
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon" id="basic-addon1">Price</span>
                    <input id="productPrice" type="text" class="form-control" aria-label="basic-addon1">
                    <div class="input-group-addon">$</div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea id="productDescription" class="form-control" rows="3">{{this.description}}</textarea>
        </div>
        <button class="btn btn-default center-block" type="submit">submit</button>
    </div>
</div>