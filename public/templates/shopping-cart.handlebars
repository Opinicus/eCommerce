<div class="cart-container center-block">
    <div id="shopping-cart-panel" class="panel panel-primary">
        <div id="shopping-cart-heading" class="panel-heading ">
            <h1 class="panel-title text-center"> Products </h1>
        </div>
        <div class="panel-body shopping-cart center-block">
            <div class="list-group ">
                {{#each items}}
                <div id="shopping-cart-list-item" class="list-group-item list-group-products">
                    <div class="media col-xs-9">
                        <div class="media-left">
                            <a href="#">
                                <img class="media-object" src={{this.img}}>
                            </a>
                        </div>
                        <div class="media-body">
                            <h4 class="media-heading">{{this.title}}</h4>
                        </div>
                    </div>
                    <div class="col-xs-3">
                        <div class="text-right">
                            <span>{{this.price}}</span>
                            <button class="remove-button">Remove</button>
                        </div>
                    </div>                            
                </div>
                {{/each}} 
            </div>                                     
        </div>
        <div id="shopping-cart-footer" class="form-group row">
            <div class="col-xs-9">
                <div class="pull-left">
                    <label>Total :</label>
                    <span id="item-count">{{this.amount}}</span>
                </div>
            </div>
            <div class="col-xs-3">
                <span class="pull-right" id="total-price"></span>
            </div>
        </div>
        <div class="row">
            <button class="btn btn-default center-block" id="buy-button" type="submit">Purchase</button>
        </div>
    </div>
</div>