<div class="container">
    {{#each products}}
    <div class="col-sm-4">
        <div class="panel panel-primary">
            <div class="panel-heading product-title">{{this.title}}</div>
            <div class="panel-body">
                <img src="{{this.url}}" class="img-responsive" alt="Image">
            </div>
            <div class="panel-footer">
                <strong class="product-price pull-left">Price: {{this.price}} $</strong>
                <div class="btn btn-warning pull-right add-to-cart-button">Add to cart</div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    {{/each}}
</div>