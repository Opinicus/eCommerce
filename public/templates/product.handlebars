<div class="container">
    <div class="input-group input-group-lg">
        <span class="input-group-addon" id="sizing-addon1">Search</span>
        <input id="search-bar-update" type="text" class="form-control" placeholder="" aria-describedby="sizing-addon1">
    </div>
    <br>
    {{#each products}}
    <div class="col-xs-12 col-sm-6 col-md-3 col-lg-2 product-container">
        <div class="thumbnail">
            <img src="{{this.img}}" class="img-responsive" alt="Image">
            <div class="caption">
                <h3 class="product-title">{{this.title}}</h3>
                <div class="input-group input-group-xs">
                    <input type="text" class="form-control" placeholder=" {{this.price}}$" disabled="disabled">
                </div>
                <div class="panel-footer">
                    <div class="btn btn-default add-to-cart-button">Add to cart</div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>